<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="container">

        <h3>Log in to continue</h3>

        <br>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, :placeholder => "Email address", class: "form-control", required: true %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", :placeholder => "Password", class: "form-control", required: true %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <%= f.check_box :remember_me %> Remember Me
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", :class => "btn btn-submit btn-block" %>
        </div>

        <br>

        <div class="text-center"><%= link_to "Forgot password?", new_user_password_path %></div>

        <div class="or"> <h6>or</h6> </div>

        <%= link_to "Log in with Facebook", user_facebook_omniauth_authorize_path, class: "btn btn-facebook btn-block" %>
        
        <br>

        <center><span>Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name) %></span></center>

        <% end %>

        <br>

      </div>
    </div>
  </div>
</div>  



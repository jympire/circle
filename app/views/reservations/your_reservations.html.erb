<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item"><%= link_to "Your Listings", gyms_path, class: "sidebar-link" %></li>
      <li class="sidebar-item"><%= link_to "Your Reservations", your_reservations_path, class: "sidebar-link active" %></li>
      <li class="sidebar-item"><%= link_to "Your Bookings", your_bookings_path, class: "sidebar-link" %></li>
    </ul>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        Your Reservations
      </div>
      <div class="panel-body">
        <% @gyms.each do |gym| %>
          <% gym.reservations.each do |reservation| %>
            <div class="row">
              <div class="col-md-2">
                <%= reservation.start_date.strftime('%v') %> to <%= reservation.end_date.strftime('%v') %>
                <br>
                <h5></h5>

              </div>
              <div class="col-md-2">
                <%= link_to gym_path(reservation.gym) do %>
                  <%= image_tag reservation.gym.cover_photo(:thumb) %>
                <% end %>
              </div>
              <div class="col-md-5">
                <%= link_to reservation.gym.listing_name, gym_path(reservation.gym) %><br><br>
                <span>
                  <%= image_tag avatar_url(reservation.user), class: "img-circle avatar-small" %>
                  <%= link_to user_path(reservation.user) do %>
                      <%= reservation.user.first_name %>
                  <% end %>
                </span>
              </div>
              <div class="col-md-3 text-right">
                <%= render partial: "reviews/host_form", locals: {reservation: reservation} %>
              </div>
            </div>
            <hr>
          <% end %>
        <% end %>  
      </div>
    </div>
  </div>
</div>  


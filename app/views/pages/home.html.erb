    </div>
    <% if @gyms.count < 0 %>
      <div>
        <h4>Launching Soon!</h4>
      </div>
    <% end %>
  <% end %>

  <!-- Gyms -->
  <div><h4 class="text-babu"><strong>Gyms</strong></h4></div>

  <% if @gyms.count < 0 %>
    <div>
      <h4>Launching Soon!</h4>
    </div>
  <% else %>
    <div class="row" id="gym_listing">
      <%= render partial: "gyms/gyms_list", locals: {gyms: @gyms} %>
    </div>
  <% end %>
</div>


